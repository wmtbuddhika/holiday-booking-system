@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Account/Login_Layout.cshtml";
}

    <div class="padding-all">
        <div class="header">
            <h1>Sign in</h1>
        </div>

        <div class="design-w3l">
            <div class="mail-form-agile">
                <form method="post" asp-controller="Account" asp-action="Verify">
                    <input type="text" name="Email" required/>
                    <input type="password" name="Password" class="padding" required/>
                    <input type="submit" value="login">
                </form>
            </div>
            <div class="clear"> </div>
        </div>
    </div>